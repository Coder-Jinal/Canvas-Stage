@model CanvasAndStage.Models.PurchaseDto

@{
    ViewData["Title"] = "Delete Purchase";
}

<h2>Are you sure you want to delete this purchase?</h2>
<p>This action cannot be undone.</p>

<form asp-action="Delete" asp-route-id="@Model.PurchaseId"  method="post">
    <input type="hidden" asp-for="PurchaseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
