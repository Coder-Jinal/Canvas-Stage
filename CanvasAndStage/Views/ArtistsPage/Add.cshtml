@model CanvasAndStage.Models.AddArtistDto

@{
    ViewData["Title"] = "Add Artist";
}

<h2>Add Artist</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="FName">First Name</label>
        <input asp-for="FName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="LName">Last Name</label>
        <input asp-for="LName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="EmailId">Email Id</label>
        <input asp-for="EmailId" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
