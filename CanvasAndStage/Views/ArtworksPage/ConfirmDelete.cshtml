@model CanvasAndStage.Models.ArtworkDto

@{
    ViewData["Title"] = "Delete Artwork";
}

<h2>Are you sure you want to delete "@Model.Title"?</h2>
<p>This action cannot be undone.</p>

<form asp-action="Delete" asp-route-id="@Model.ArtworkId" method="post">
    <input type="hidden" asp-for="ArtworkId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
